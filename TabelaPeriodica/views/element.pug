extends layout

block content
  .navbar
      a(href='/')
        i.fa.fa-fw.fa-home
        |  HomePage
      a.active(href='/periodictable/elements')
        i.fas.fa-vial
        |  Elements
      a(href='/periodictable/groups')
        i.fa.fa-fw.fa-flask
        |  Groups
      a(href='/periodictable/periods')
        i.fa.fa-fw.fa-atom
        |  Periods
  h1.glow= element.Name.charAt(0).toUpperCase()+ element.Name.slice(1)

  table.table 
        thead
            tr
                th Symbol
                th Name
                th Atomic Number 
                th Atomic Weight 
                th Group 
                th Period 
                th Color 
                th Classification 
       
        tbody
            tr
                td= element.Symbol
                td= element.Name
                td= element["Atomic Number"]
                td= element["Atomic Weight"]
                td
                  a(href="/periodictable/group/"+element.Group)= element.Group
                td
                  a(href="/periodictable/period/"+element.Period)=element.Period 
                td= element.Color 
                td= element.Classification