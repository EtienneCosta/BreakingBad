extends layout

block content
  .navbar
      a(href='/')
        i.fa.fa-fw.fa-home
        |  HomePage
      a.active(href='/periodictable/elements')
        i.fas.fa-vial
        |  Elements
      a(href='/periodictable/groups')
        i.fa.fa-fw.fa-flask
        |  Groups
      a(href='/periodictable/periods')
        i.fa.fa-fw.fa-atom
        |  Periods
  h1.glow Periodic Table of Elements 
  
  div.elements(role='region' tabindex='0')
    ol#periodic-table
         each e in elements
            li(title=''+e.name)
              a(href='/periodictable/element/'+e.symbol)= e.symbol 